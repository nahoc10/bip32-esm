{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": [
    "dist",
    "esm",
    "__mocks__",
    "__tests__",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.test.jsx",
    "src/**/*.test.js"
  ]
}
